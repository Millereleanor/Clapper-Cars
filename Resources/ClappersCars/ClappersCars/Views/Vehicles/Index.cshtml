@using ClappersCars.Models
@model IEnumerable<ClappersCars.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicle List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover" style="font-size: 14px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @if (item.IsAvailable)
                {
                        <span class="glyphicon glyphicon-check" style="color: green"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-remove" style="color: red"></span>
                    }
                </td>
                <td>
                    @if (item.Condition)
                {
                        <span>New</span>
                    }
                    else
                    {
                        <span>Used</span>
                    }
                </td>
                <td class="pull-right">
                    @if (User.Identity.IsAuthenticated)
                {
                        @*@Html.ActionLink("Edit", "Edit", new {id = item.VehicleID}) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.VehicleID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.VehicleID })*@

                        <a class="btn btn-sm glyphicon glyphicon-info-sign" title="Details" href="@Url.Action("Details", new {id = item.VehicleID})"></a>
                        <a class="btn btn-sm glyphicon glyphicon-exclamation-sign disabled" title="Edit" href="@Url.Action("Edit", new {id = item.VehicleID})"></a>
                        <a class="btn btn-sm glyphicon glyphicon-remove-sign" title="Delete" href="@Url.Action("Delete", new {id = item.VehicleID})"></a>
                    }
                    else
                    {
                        <a class="btn glyphicon glyphicon-info-sign" title="Details" href="@Url.Action("Details", new {id = item.VehicleID})"></a>
                                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateUserRequestForm-@item.VehicleID">
                            New Request
                        </button>
                        @Html.Partial("_CreateUserRequestForm", new UserRequestForm() { VehicleID = item.VehicleID })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@*when details is pased in must pass in the model aswell.*@